{
  "name": "acronym-crud-express",
  "version": "1.0.0-a1",
  "description": "simple REST API for defining acronyms",
  "main": "src/app.js",
  "scripts": {
    "start": "node ./dist/bin/www",
    "watch": "nodemon",
    "dev": "npm run clean; npm run compile; npm run start",
    "compile": "babel ./src --out-dir dist",
    "clean": "rm -r dist",
    "build": "npm run clean; npm run compile",
    "test": "bash -c src/bin/test.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tassaron/acronym-crud-express.git"
  },
  "keywords": [
    "acronym"
  ],
  "author": "Brianna Rainey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tassaron/acronym-crud-express/issues"
  },
  "homepage": "https://github.com/tassaron/acronym-crud-express#readme",
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "nodemon": "^2.0.16"
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "nodemonConfig": { 
    "exec": "npm run dev",
    "watch": ["src/*"],
    "exclude": ["*.sh"]
  }
}
